{% extends 'base.html.twig' %}

{% block body %}
	<div id="content">
		<div class="row"> 
		<div class="col"></div>
			 <div class="col-8">
				{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
				<div class="form-group">
				{{ form_label(form.username, "Login : " ,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
					<div class="col-sm-4">
			        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
			     	</div>
				</div>
				<div class="form-group">
				{{ form_label(form.password, "Mot de passe : " ,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
					<div class="col-sm-4">
			        	{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
			     	</div>
				</div>

				<div class="form-group">
				{{ form_label(form.nom, "Nom : " ,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
					<div class="col-sm-4">
			        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
			     	</div>
				</div>
				<div class="form-group">
				{{ form_label(form.prenom, "Pr√©nom : " ,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
					<div class="col-sm-4">
			        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
			     	</div>
				</div>
				
				<div class="form-group">

				{{ form_label(form.email, "Adresse mail : " ,  {'label_attr': {'class': 'col-sm-3 control-label'} }) }}
					<div class="col-sm-4">
			       		 {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
			     	</div>
				</div>
				<div class="form-group">
					<div class="col-sm-4 text-center">
						{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
					</div>
				</div>
				{{ form_end(form) }}
			 </div>
		</div>
	</div>


	

{% endblock %}